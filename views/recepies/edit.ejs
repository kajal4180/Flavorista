<% layout('layouts/boilerplate')%> 
<link rel="stylesheet" href="/stylesheets/new.css"> 
  <div class="row">
    <h1 class="text-center">Edit Recepie</h1>
    <div class="col-6 offset-3">
        <form action="/recepies/<%=recepie._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input class="form-control" type="text" id="title" name="recepie[title]" value="<%= recepie.title %>" required>
          <div class="valid-feedback">
            Looks Good!
          </div> 
          
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <input class="form-control" type="text" id="description" name="recepie[description]" value="<%= recepie.description %>" required> 
            <div class="valid-feedback">
              Looks Good!
            </div>

        </div>
        <div class="mb-3">
          <label class="form-label" for="cookTime">CookTime</label>
          <input class="form-control" type="text" id="description" name="recepie[cookTime]" value="<%= recepie.cookTime %>" required> 
          <div class="valid-feedback">
            Looks Good!
          </div>

      </div>
        <div class="mb-3">
          <label for="image" class="form-label">Add more images</label>
          <input type="file" id="image" name="image" multiple>
           
        </div>
        <!-- <input type="file" name="image" id="" multiple> -->
        <!-- <div class="mb-3">
          <label class="form-label" for="ingridients">ingridients</label>
            <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input type="text" id="ingridients" class="form-control" placeholder="0.00" aria-describedby="price-label" aria-label="price" name="campground[price]" required>
            </div>
            <div class="valid-feedback">
              Looks Good!
            </div>
        </div> -->
        <div class="mb-3">
            <label class="form-label" for="ingridients">Ingridients</label>
            <textarea class="form-control" type="text" id="ingridients" name="recepie[ingridients]"required ><%= recepie.ingridients %></textarea>
            <div class="valid-feedback">
              Looks Good!
            </div>
          </div>

        <div class="mb-3">
          <label class="form-label" for="instructions">Instructions</label>
          <textarea class="form-control" type="text" id="instructions" name="recepie[instructions]" required><%= recepie.instructions %></textarea>
          <div class="valid-feedback">
            Looks Good!
          </div>
        </div>
        <div class="mb-3">
          <% recepie.images.forEach(function(img,i){ %>
          <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
          <div class="form-check-inline">
            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
          </div>
          <label for="image-<%=i%>">Delete</label>
          <% })%>
        </div>
        <div class="mb-3">
          <button class="btn btn-success">Edit Recepie</button>
        </div> 
      </form>
    </div>
  </div>
 
    
